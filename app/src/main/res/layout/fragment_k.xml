<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="left"
        android:text="WORK COORDINATION"
        android:textColor="@color/text_hard"
        android:textSize="16dp"
        android:textStyle="bold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="8dp"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:scrollbarSize="50dip">
        <!-- Parent layout starts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1F1F1"
            android:orientation="vertical">


            <!-- K1 Starts RB  -->
                <androidx.cardview.widget.CardView style="@style/Q_CardView">


                    <LinearLayout
                        android:id="@+id/lv_K1"
                        style="@style/Q_Linerlayout_v"

                        >

                        <TextView
                            android:id="@+id/L_K1"
                        style="@style/TextView"
                        android:text="@string/L_K1"

                        />


                    <RadioGroup style="@style/RadioGroup">

                        <RadioButton
                            android:id="@+id/R_K1_yes"
                            style="@style/RadioButton"
                            android:text="@string/R_yes" />

                        <RadioButton
                            android:id="@+id/R_K1_no"
                            style="@style/RadioButton"
                            android:text="@string/R_No" />


                    </RadioGroup>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            <!-- K1 End RB -->

            <!-- K2 Starts RB  -->
            <androidx.cardview.widget.CardView style="@style/Q_CardView">


                <LinearLayout
                    android:id="@+id/lv_K2"
                    style="@style/Q_Linerlayout_v"

                    >

                    <TextView
                        android:id="@+id/L_K2"
                        style="@style/TextView"
                        android:text="@string/L_K2"

                        />


                    <RadioGroup style="@style/RadioGroup">

                        <RadioButton
                            android:id="@+id/R_K2_1"
                            style="@style/RadioButton"
                            android:text="@string/R_K2_1" />

                        <RadioButton
                            android:id="@+id/R_K2_2"
                            style="@style/RadioButton"
                            android:text="@string/R_K2_2" />

                        <RadioButton
                            android:id="@+id/R_K2_3"
                            style="@style/RadioButton"
                            android:text="@string/R_K2_3" />

                        <RadioButton
                            android:id="@+id/R_K2_4"
                            style="@style/RadioButton"
                            android:text="@string/R_K2_4" />


                    </RadioGroup>


                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!-- K2 End RB -->

            <!-- K3 Starts RB  -->
            <androidx.cardview.widget.CardView style="@style/Q_CardView">


                <LinearLayout
                    android:id="@+id/lv_K3"
                    style="@style/Q_Linerlayout_v"

                    >

                    <TextView
                        android:id="@+id/L_K3"
                        style="@style/TextView"
                        android:text="@string/L_K3"

                        />


                    <RadioGroup style="@style/RadioGroup">

                        <RadioButton
                            android:id="@+id/R_K3_yes"
                            style="@style/RadioButton"
                            android:text="@string/R_yes" />

                        <RadioButton
                            android:id="@+id/R_K3_no"
                            style="@style/RadioButton"
                            android:text="@string/R_No" />


                    </RadioGroup>


                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!-- K3 End RB -->


            <Button
                android:id="@+id/btn_A_next"
                style="@style/Button_collder"
                android:layout_margin="10dp"
                android:text="Next" />

        </LinearLayout>
        <!-- Parent layout ENds -->


    </ScrollView>


</LinearLayout>
