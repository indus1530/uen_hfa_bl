                                android:text="@string/R_B7_4" />

                            <RadioButton
                                android:id="@+id/rb_B7_2_5"
                                style="@style/RadioButton"
                                android:text="@string/R_B7_5" />

                            <RadioButton
                                android:id="@+id/rb_B7_2_6"
                                style="@style/RadioButton"
                                android:text="@string/R_B7_6" />

                            <RadioButton
                                android:id="@+id/rb_B7_2_7"
                                style="@style/RadioButton"
                                android:text="@string/R_B7_7" />

                            <RadioButton
                                android:id="@+id/rb_B7_2_8"
                                style="@style/RadioButton"
                                android:text="@string/R_B7_8" />

                            <EditText
                                android:id="@+id/ed_B7_2_8"
                                style="@style/EditText_Name"
                                android:hint="Specify"
                                android:maxLength="50"
                                android:visibility="gone" />


                        </RadioGroup>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lv_b7_3"

                        style="@style/Q_Linerlayout_v"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextView"
                            android:layout_marginBottom="10dp"

                            android:text="Evening"

                            />

                        <RadioGroup style="@style/RadioGroup">

                            <RadioButton
                                android:id="@+id/rb_B7_3_1"
                                style="@style/RadioButton"
                                android:text="@string/R_B7_1" />

                            <RadioButton
                                android:id="@+id/rb_B7_3_2"
                                style="@style/RadioButton"
                                android:text="@string/R_B7_2" />

                            <RadioButton
                                android:id="@+id/rb_B7_3_3"
                                style="@style/RadioButton"
                                android:text="@string/R_B7_3" />

                            <RadioButton
                                android:id="@+id/rb_B7_3_4"
                                style="@style/RadioButton"
                                android:text="@string/R_B7_4" />

                            <RadioButton
                                android:id="@+id/rb_B7_3_5"
                                style="@style/RadioButton"
                                android:text="@string/R_B7_5" />

                            <RadioButton
                                android:id="@+id/rb_B7_3_6"
                                style="@style/RadioButton"
                                android:text="@string/R_B7_6" />

                            <RadioButton
                                android:id="@+id/rb_B7_3_7"
                                style="@style/RadioButton"
                                android:text="@string/R_B7_7" />

                            <RadioButton
                                android:id="@+id/rb_B7_3_8"
                                style="@style/RadioButton"
                                android:text="@string/R_B7_8" />

                            <EditText
                                android:id="@+id/ed_B7_3_8"
                                style="@style/EditText_Name"
                                android:hint="Specify"
                                android:maxLength="50"
                                android:visibility="gone" />

                        </RadioGroup>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lv_b7_4"

                        style="@style/Q_Linerlayout_v"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextView"
                            android:layout_marginBottom="10dp"

                            android:text="Night"

                            />

                        <RadioGroup style="@style/RadioGroup">

                            <RadioButton
                                android:id="@+id/rb_B7_4_1"
                                style="@style/RadioButton"
                                android:text="@string/R_B7_1" />

                            <RadioButton
                                android:id="@+id/rb_B7_4_2"
                                style="@style/RadioButton"
                                android:text="@string/R_B7_2" />

                            <RadioButton
                                android:id="@+id/rb_B7_4_3"
                                style="@style/RadioButton"
                                android:text="@string/R_B7_3" />

                            <RadioButton
                                android:id="@+id/rb_B7_4_4"
                                style="@style/RadioButton"
                                android:text="@string/R_B7_4" />

                            <RadioButton
                                android:id="@+id/rb_B7_4_5"
                                style="@style/RadioButton"
                                android:text="@string/R_B7_5" />

                            <RadioButton
                                android:id="@+id/rb_B7_4_6"
                                style="@style/RadioButton"
                                android:text="@string/R_B7_6" />

                            <RadioButton
                                android:id="@+id/rb_B7_4_7"
                                style="@style/RadioButton"
                                android:text="@string/R_B7_7" />

                            <RadioButton
                                android:id="@+id/rb_B7_4_8"
                                style="@style/RadioButton"
                                android:text="@string/R_B7_8" />

                            <EditText
                                android:id="@+id/ed_B7_4_8"
                                style="@style/EditText_Name"
                                android:hint="Specify"
                                android:maxLength="50"
                                android:visibility="gone" />


                        </RadioGroup>


                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--  ends CB-->


            <Button
                android:id="@+id/btn_A_next"
                style="@style/Button_collder"
                android:layout_margin="10dp"
                android:text="Next" />

        </LinearLayout>
        <!-- Parent layout ENds -->


    </ScrollView>


</LinearLayout>
