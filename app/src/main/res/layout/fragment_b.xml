<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/uncolor" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="8dp"
            android:text="COVERAGE"
            android:textColor="@color/text_hard"
            android:textSize="16dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/hitnscolor" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="8dp"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:scrollbarSize="50dip">
        <!-- Parent layout starts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1F1F1"
            android:orientation="vertical">


            <!-- B1 Starts ED-->
                <androidx.cardview.widget.CardView

                    style="@style/Q_CardView">


                    <LinearLayout

                        android:id="@+id/lv_b1"
                        style="@style/Q_Linerlayout_v">

                        <TextView
                        android:id="@+id/L_B1"
                        style="@style/TextView"
                        android:text="@string/L_B1"

                        />


                    <RadioGroup style="@style/RadioGroup">

                        <RadioButton
                            android:id="@+id/rb_b1_yes"
                            style="@style/RadioButton"
                            android:text="@string/R_yes" />

                        <RadioButton
                            android:id="@+id/rb_b1_no"
                            style="@style/RadioButton"
                            android:text="@string/R_No" />


                    </RadioGroup>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--B1  Ends ED-->


            <!--B2  Starts ED-->
            <androidx.cardview.widget.CardView

                style="@style/Q_CardView">


                <LinearLayout

                    android:id="@+id/lv_b2"
                    style="@style/Q_Linerlayout_v">

                    <TextView
                        android:id="@+id/L_B2"
                        style="@style/TextView"
                        android:text="@string/L_B2"

                        />


                    <EditText
                        android:id="@+id/ed_b2"
                        style="@style/EditText_number"
                        android:hint=""
                        android:maxLength="7" />


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--B2  Ends ED-->


            <!-- B3 Starts ED-->
            <androidx.cardview.widget.CardView

                style="@style/Q_CardView">


                <LinearLayout

                    android:id="@+id/lv_b3"
                    style="@style/Q_Linerlayout_v">

                    <TextView
                        android:id="@+id/L_B3"
                        style="@style/TextView"
                        android:text="@string/L_B3"

                        />


                    <RadioGroup style="@style/RadioGroup">

                        <RadioButton
                            android:id="@+id/R_B3_1"
                            style="@style/RadioButton"
                            android:text="@string/R_B3_1" />

                        <RadioButton
                            android:id="@+id/R_B3_2"
                            style="@style/RadioButton"
                            android:text="@string/R_B3_2" />


                    </RadioGroup>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--B3  Ends ED-->


            <!--B4  Starts ED-->
            <androidx.cardview.widget.CardView

                style="@style/Q_CardView">


                <LinearLayout

                    android:id="@+id/lv_b4"
                    style="@style/Q_Linerlayout_v">

                    <TextView
                        android:id="@+id/L_B4"
                        style="@style/TextView"
                        android:text="@string/L_B4"

                        />


                    <EditText
                        android:id="@+id/ed_B4"
                        style="@style/EditText_number"
                        android:digits="1234567"
                        android:hint=""
                        android:maxLength="1" />


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--B4  Ends ED-->


            <!--B5  Starts ED-->
            <androidx.cardview.widget.CardView

                style="@style/Q_CardView">


                <LinearLayout

                    android:id="@+id/lv_b5"
                    style="@style/Q_Linerlayout_v">

                    <TextView
                        android:id="@+id/L_B5"
                        style="@style/TextView"
                        android:text="@string/L_B5"

                        />


                    <EditText
                        android:id="@+id/ed_B5"
                        style="@style/EditText_number"
                        android:hint=""
                        android:maxLength="2" />


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--B5  Ends ED-->


            <!--  B6   Starts CB -->
            <androidx.cardview.widget.CardView style="@style/Q_CardView">

                <LinearLayout
                    android:id="@+id/lv_b6"
                    style="@style/Q_Linerlayout_v">

                    <TextView
                        android:id="@+id/L_B6"
                        style="@style/TextView"
                        android:text="@string/L_B6" />


                    <CheckBox
                        android:id="@+id/C_B6_1"
                        style="@style/CheckBox"
                        android:text="@string/C_B6_1" />

                    <CheckBox
                        android:id="@+id/C_B6_2"
                        style="@style/CheckBox"
                        android:text="@string/C_B6_2" />

                    <CheckBox
                        android:id="@+id/C_B6_3"
                        style="@style/CheckBox"
                        android:text="@string/C_B6_3" />

                    <CheckBox
                        android:id="@+id/C_B6_4"
                        style="@style/CheckBox"
                        android:text="@string/C_B6_4" />


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--B6  ends CB-->


            <!-- B7    Starts CB -->
            <androidx.cardview.widget.CardView style="@style/Q_CardView">

                <LinearLayout
                    android:id="@+id/lv_b7"
                    style="@style/Q_Linerlayout_v">

                    <TextView
                        android:id="@+id/L_B7"
                        style="@style/TextView"
                        android:layout_marginBottom="10dp"
                        android:text="@string/L_B7"
                        android:textStyle="bold"

                        />

                    <LinearLayout
                        android:id="@+id/lv_b7_1"
                        style="@style/Q_Linerlayout_v"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextView"
                            android:layout_marginBottom="10dp"

                            android:text="Morning"

                            />

                        <RadioGroup style="@style/RadioGroup">

                            <RadioButton
                                android:id="@+id/rb_B7_1_1"
                                style="@style/RadioButton"
                                android:text="@string/R_B7_1" />

                            <RadioButton
                                android:id="@+id/rb_B7_1_2"
                                style="@style/RadioButton"
                                android:text="@string/R_B7_2" />

                            <RadioButton
                                android:id="@+id/rb_B7_1_3"
                                style="@style/RadioButton"
                                android:text="@string/R_B7_3" />

                            <RadioButton
                                android:id="@+id/rb_B7_1_4"
                                style="@style/RadioButton"
                                android:text="@string/R_B7_4" />

                            <RadioButton
                                android:id="@+id/rb_B7_1_5"
                                style="@style/RadioButton"
                                android:text="@string/R_B7_5" />

                            <RadioButton
                                android:id="@+id/rb_B7_1_6"
                                style="@style/RadioButton"
                                android:text="@string/R_B7_6" />

                            <RadioButton
                                android:id="@+id/rb_B7_1_7"
                                style="@style/RadioButton"
                                android:text="@string/R_B7_7" />

                            <RadioButton
                                android:id="@+id/rb_B7_1_8"
