                    android:id="@+id/lv_h1"
                    style="@style/Q_Linerlayout_v"

                    >

                    <TextView
                        android:id="@+id/L_H1"
                        style="@style/TextView"
                        android:text="@string/L_H1"

                        />


                    <RadioGroup style="@style/RadioGroup">

                        <RadioButton
                            android:id="@+id/R_h1_yes"
                            style="@style/RadioButton"
                            android:text="@string/R_yes" />

                        <RadioButton
                            android:id="@+id/R_h1_no"
                            style="@style/RadioButton"
                            android:text="@string/R_No" />


                    </RadioGroup>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- H1  End RB -->


